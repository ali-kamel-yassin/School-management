# Environment Variables for Sajjaly Pro
# Copy this file to .env for local development

# Database Configuration
# For local development (SQLite will be used if this is not set)
# DATABASE_URL=

# For production with PostgreSQL (Supabase example):
# DATABASE_URL=postgresql://user:password@host:port/database

# JWT Secret Key (IMPORTANT: Change this for production!)
JWT_SECRET=your_super_secret_key_change_in_production

# Environment
NODE_ENV=development

# Server Port (automatically set by hosting platforms)
PORT=1111